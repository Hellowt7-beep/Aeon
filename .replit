# Replit Configuration f√ºr Aeon WhatsApp Bot

language = "nodejs"

# Entrypoint - Startet direkt im Root (Projekt ist ohne v2 Ordner auf GitHub)
# Workaround: Nutze .mjs Extension da Replit package.json nicht richtig liest
run = "if [ -f src/index.mjs ]; then node src/index.mjs; else cp src/index.js src/index.mjs && node src/index.mjs; fi"

# Deploy Command
[deploy]
run = ["sh", "-c", "npm install && npm start"]

# Environment Variables (werden automatisch geladen)
[env]
NODE_ENV = "production"
PORT = "3000"
DATA_DIR = "/home/runner/data"

